    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>servlet.com.zhishang.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register1</url-pattern>
        <url-pattern>/register2</url-pattern>
    </servlet-mapping>
</web-app>